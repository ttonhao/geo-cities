{
//   "CONFIGURA√á√ÉO DE DEBUG PARA STREAMLIT NO VS CODE",
//   "========================================================",
  
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Debug Streamlit App",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/streamlit",
      "args": [
        "run",
        "${workspaceFolder}/app_completo.py",
        "--server.port=8501",
        "--server.address=localhost"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "STREAMLIT_ENV": "development"
      },
      "stopOnEntry": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "üîß Debug Python Script Direct",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/debug_script.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "üßµ Debug Threads (Attach)",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ]
    },
    {
      "name": "üêõ Debug with Logs",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/streamlit",
      "args": [
        "run",
        "${workspaceFolder}/app_completo.py",
        "--logger.level=debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "STREAMLIT_ENV": "development",
        "PYTHONUNBUFFERED": "1"
      }
    }
  ]
}